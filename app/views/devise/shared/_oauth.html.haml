- if devise_mapping.omniauthable?
  .oauth-buttons.clearfix
    - resource_class.omniauth_providers.each do |provider|
      = link_to omniauth_authorize_path(resource_name, provider), class: "btn" do
        - case provider.to_s
        - when "facebook"
          %i.fa.fa-facebook
        - when "google_oauth2"
          %i.fa.fa-google-plus
        Log in with #{ provider.to_s.split('_').first.titleize }